{
  "name": "server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/server",
        "main": "apps/server/src/main.ts",
        "tsConfig": "apps/server/tsconfig.app.json",
        "webpackConfig": "apps/server/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {
          "sourceMap": false,
          "optimization": true,
          "extractLicenses": false,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/server/src/environments/environment.ts",
              "with": "apps/server/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "server:build",
        "port": 9229,
        "inspect": true
      },
      "configurations": {
        "development": {
          "buildTarget": "server:build:development"
        },
        "production": {
          "buildTarget": "server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/server"],
      "options": {
        "jestConfig": "apps/server/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "integration-test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/server-integration-testing"],
      "options": {
        "jestConfig": "apps/server/integration-testing/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "debug": {
          "watch": true
        }
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "ncc build dist/apps/server/main.js -o dist/installation/server/ -m"
          }
        ]
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
