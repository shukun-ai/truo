{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@shukun/api": ["libs/api/src/index.ts"],
      "@shukun/cli": ["libs/cli/src/index.ts"],
      "@shukun/code-resolver": ["libs/code-resolver/src/index.ts"],
      "@shukun/component": ["libs/component/src/index.ts"],
      "@shukun/connector/handler": ["libs/connector/handler/src/index.ts"],
      "@shukun/connector/node-runtime": [
        "libs/connector/node-runtime/src/index.ts"
      ],
      "@shukun/connector/task": ["libs/connector/task/src/index.ts"],
      "@shukun/exception": ["libs/exception/src/index.ts"],
      "@shukun/knex": ["libs/knex/src/index.ts"],
      "@shukun/legacy-api": ["libs/legacy-api/src/index.ts"],
      "@shukun/postmate": ["libs/postmate/src/index.ts"],
      "@shukun/presenter-input-schema": [
        "libs/presenter/input-schema/src/index.ts"
      ],
      "@shukun/presenter/definition": [
        "libs/presenter/definition/src/index.ts"
      ],
      "@shukun/presenter/editor-inputs": [
        "libs/presenter/editor-inputs/src/index.ts"
      ],
      "@shukun/presenter/editor-ui": ["libs/presenter/editor-ui/src/index.ts"],
      "@shukun/presenter/widget-react": [
        "libs/presenter/widget-react/src/index.ts"
      ],
      "@shukun/schema": ["libs/schema/src/index.ts"],
      "@shukun/util-functions": ["libs/util-functions/src/index.ts"],
      "@shukun/validator": ["libs/validator/src/index.ts"],
      "@shukun/workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
