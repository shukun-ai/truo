{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Node App",
      "type": "node",
      "request": "attach",
      "sourceMaps": true,
      "port": 9229
    },
    {
      "name": "Debug Unit test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@nrwl/cli/bin/nx.js",
      "args": [
        "run",
        "server:test",
        "--watchAll",
        "--codeCoverage=false",
        "--runInBand",
        "--detectOpenHandles",
        "--inspect-brk"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Integration testing",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@nrwl/cli/bin/nx.js",
      "args": [
        "run",
        "server:integration-test",
        "--watchAll",
        "--codeCoverage=false",
        "--runInBand",
        "--detectOpenHandles",
        "--inspect-brk"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch client on Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9000",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-debug-userdatadir"
    },
    {
      "name": "Launch editor on Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-debug-userdatadir"
    },
    {
      "name": "Launch player on Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8090",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-debug-userdatadir"
    }
  ]
}
