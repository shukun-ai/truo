{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "WidgetSchema",
  "description": "Define the player contained Stores and UI Elements",
  "type": "object",
  "required": ["tag", "properties"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "tag": { "type": "string" },
    "experimental": { "type": "boolean" },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "type": "object",
          "required": ["type", "label"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "enum": [
                "string",
                "number",
                "boolean",
                "array",
                "object",
                "callback"
              ]
            },
            "label": { "type": "string" },
            "defaultValue": { "type": "string" }
          }
        }
      }
    }
  }
}
