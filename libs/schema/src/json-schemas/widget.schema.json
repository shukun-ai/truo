{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "WidgetSchema",
  "description": "Define the presenter contained Stores and UI Elements",
  "type": "object",
  "required": ["tag", "properties"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "tag": { "type": "string" },
    "icon": { "type": "string", "$comment": "icon svg string" },
    "experimental": { "type": "boolean" },
    "allowedChildTags": {
      "type": "array",
      "items": {
        "type": "string",
        "$comment": "The array is empty, then do not allow any child tags. If the value is *, then support any."
      }
    },
    "searchKeywords": { "type": "array", "items": { "type": "string" } },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "type": "object",
          "title": "WidgetProperty",
          "required": ["label", "type"],
          "additionalProperties": false,
          "properties": {
            "label": { "type": "string" },
            "type": {
              "enum": [
                "string",
                "integer",
                "number",
                "boolean",
                "enum",
                "stringArray",
                "optionArray",
                "unknownObject",
                "unknownArray",
                "dataBinding",
                "breakpoints",
                "attachments"
              ]
            },
            "enums": { "type": "array", "items": { "type": "string" } },
            "isEvent": { "type": "boolean" },
            "placeholder": { "type": "string" },
            "description": { "type": "string" }
          },
          "default": {
            "label": "",
            "type": ""
          }
        }
      }
    }
  }
}
