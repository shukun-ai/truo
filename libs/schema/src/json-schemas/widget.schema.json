{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "WidgetSchema",
  "description": "Define the presenter contained Stores and UI Elements",
  "type": "object",
  "required": ["tag", "properties"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "tag": { "type": "string" },
    "experimental": { "type": "boolean" },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "type": "object",
          "required": ["type", "label"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "enum": [
                "string",
                "number",
                "boolean",
                "array",
                "object",
                "callback",
                "enum"
              ]
            },
            "label": { "type": "string" },
            "defaultValue": { "type": "string" },
            "enumOptions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["label", "value"],
                "additionalProperties": false,
                "properties": {
                  "label": { "type": "string" },
                  "value": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
