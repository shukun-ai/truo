{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "WidgetSchema",
  "description": "Define the player contained Stores and UI Elements",
  "type": "object",
  "required": ["tag", "properties", "events"],
  "additionalProperties": false,
  "properties": {
    "tag": { "type": "string" },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "type": "object",
          "required": ["expectedType", "editLabel", "editType"],
          "additionalProperties": false,
          "properties": {
            "expectedType": {
              "enum": ["string", "number", "boolean", "mixed"]
            },
            "editLabel": { "type": "string" },
            "editType": { "enum": ["template"] },
            "editPlaceholder": { "type": "string" }
          }
        }
      }
    },
    "events": {
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "type": "object",
          "required": ["editLabel"],
          "additionalProperties": false,
          "properties": {
            "editLabel": { "type": "string" }
          }
        }
      }
    }
  }
}
