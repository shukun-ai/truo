{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "FlowSchema",
  "description": "Describe Flow Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "input", "output", "startEventName", "events", "store"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "format": "apiName"
    },
    "description": {
      "type": "string"
    },
    "input": {
      "type": "object",
      "description": "The input JSON Schema Rule"
    },
    "output": {
      "type": "object",
      "description": "The output JSON Schema Rule"
    },
    "startEventName": {
      "type": "string"
    },
    "events": {
      "$ref": "flow/events.schema.json"
    },
    "store": {
      "$ref": "flow/store.schema.json"
    }
  }
}
