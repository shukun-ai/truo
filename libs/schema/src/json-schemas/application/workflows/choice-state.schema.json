{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "WorkflowChoiceState",
  "type": "object",
  "additionalProperties": true,
  "required": ["type", "choices"],
  "properties": {
    "type": {
      "const": "Choice"
    },
    "comment": {
      "type": "string"
    },
    "inputPath": {
      "type": "string"
    },
    "outputPath": {
      "type": "string"
    },
    "choices": {
      "$ref": "choices.schema.json"
    },
    "default": {
      "type": "string"
    },
    "x": {
      "type": "number"
    },
    "y": {
      "type": "number"
    }
  }
}
