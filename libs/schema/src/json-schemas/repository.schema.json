{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "RepositorySchema",
  "description": "Define the presenter repository definitions",
  "type": "object",
  "required": ["name", "parameters"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "parameters": {
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "type": "object",
          "required": ["editorType", "required"],
          "additionalProperties": false,
          "properties": {
            "editorType": {
              "enum": ["json", "atomName", "flowName"]
            },
            "required": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "manualJsonSchema": { "type": "boolean" }
  }
}
