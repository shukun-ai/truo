{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "RepositorySchema",
  "description": "Define the presenter repository definitions",
  "type": "object",
  "required": ["name", "scope", "parameters", "actions"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "scope": {
      "enum": ["app", "container"]
    },
    "parameters": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "type": "object",
          "title": "RepositoryParameter",
          "required": ["label", "type"],
          "additionalProperties": false,
          "properties": {
            "label": {
              "type": "string"
            },
            "type": {
              "enum": ["jsonSchema", "atomName", "connectorName"],
              "$comment": "The parameters in repository should be static all. All type is disabledJsMode as true."
            },
            "required": {
              "type": "boolean"
            },
            "enums": { "type": "array", "items": { "type": "string" } },
            "placeholder": { "type": "string" },
            "description": { "type": "string" }
          }
        }
      }
    },
    "actions": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "type": "object",
          "title": "RepositoryAction",
          "required": [],
          "additionalProperties": false,
          "properties": {
            "enabledPath": { "type": "boolean" },
            "enabledValue": { "type": "boolean" }
          }
        }
      }
    }
  }
}
