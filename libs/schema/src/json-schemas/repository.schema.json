{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "RepositorySchema",
  "description": "Define the presenter repository definitions",
  "type": "object",
  "required": ["name", "scope", "parameters", "actions"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "scope": {
      "enum": ["app", "container"]
    },
    "manualJsonSchema": { "type": "boolean" },
    "parameters": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "type": "object",
          "title": "RepositoryParameter",
          "required": ["editorType"],
          "additionalProperties": false,
          "properties": {
            "editorType": {
              "enum": ["json", "atomName", "flowName"]
            },
            "required": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "actions": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "type": "object",
          "title": "RepositoryAction",
          "required": [],
          "additionalProperties": false,
          "properties": {
            "requiredPath": { "type": "boolean" },
            "requiredValue": { "type": "boolean" }
          }
        }
      }
    }
  }
}
