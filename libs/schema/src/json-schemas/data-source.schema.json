{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "DataSourceSchema",
  "description": "Describe Data Source Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["connections"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "connections": {
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "title": "DataSourceConnection",
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "host", "database", "metadata"],
          "properties": {
            "type": {
              "enum": ["postgres", "oracleDB"]
            },
            "host": {
              "type": "string"
            },
            "port": {
              "type": "number"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "database": {
              "type": "string"
            },
            "schema": {
              "type": "string"
            },
            "metadata": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "tablePrefix": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
