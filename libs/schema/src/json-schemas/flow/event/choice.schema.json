{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "FlowEventChoice",
  "type": "object",
  "required": ["type", "next", "conditions"],
  "properties": {
    "type": { "const": "Choice" },
    "next": { "type": "string" },
    "conditions": {
      "type": "array",
      "items": {
        "properties": {
          "condition": { "type": "string" },
          "eventName": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    }
  }
}
