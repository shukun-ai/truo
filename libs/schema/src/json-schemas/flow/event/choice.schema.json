{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "FlowEventChoice",
  "type": "object",
  "required": ["type", "next", "conditions"],
  "properties": {
    "type": { "const": "Choice" },
    "next": {
      "type": "string",
      "skEditorType": "Next",
      "description": "it means default next."
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["condition", "next"],
        "additionalProperties": false,
        "properties": {
          "description": { "type": "string" },
          "condition": { "type": "string" },
          "next": { "type": "string" }
        }
      }
    }
  }
}
