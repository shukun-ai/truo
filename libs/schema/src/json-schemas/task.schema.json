{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "TaskSchema",
  "description": "Define the connector task definitions",
  "type": "object",
  "required": ["scope", "parameters", "withAccessToken"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "scope": {
      "enum": ["internal", "resource"]
    },
    "address": {
      "type": "string",
      "$comment": "Example: http://127.0.0.1:3000/apis/v1, mongodb://127.0.0.1/db"
    },
    "withAccessToken": {
      "type": "boolean"
    },
    "protocol": { "enum": ["http"] },
    "parameters": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "type": "object",
          "title": "TaskParameter",
          "required": ["schema", "required", "editorType"],
          "additionalProperties": false,
          "properties": {
            "schema": {
              "$ref": "reference/task-reference.schema.json"
            },
            "required": {
              "type": "boolean"
            },
            "editorType": {
              "enum": [
                "taskName",
                "atomName",
                "sourceQuery",
                "connectorName",
                "parallelBranches",
                "choiceConditions",
                "repeatCount",
                "templateCode",
                "jsCode",
                "description",
                "temporaryKey",
                "string",
                "number",
                "integer",
                "boolean"
              ]
            }
          }
        }
      }
    }
  }
}
