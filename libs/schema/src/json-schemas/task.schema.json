{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "TaskSchema",
  "description": "Define the connector task definitions",
  "type": "object",
  "required": ["scope", "parameters"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "scope": {
      "enum": ["internal", "resource"]
    },
    "address": { "type": "string" },
    "parameters": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "type": "object",
          "title": "TaskParameter",
          "required": ["schema", "required", "editorType"],
          "additionalProperties": false,
          "properties": {
            "schema": {
              "$ref": "reference/task-reference.schema.json"
            },
            "required": {
              "type": "boolean"
            },
            "editorType": {
              "enum": [
                "taskName",
                "atomName",
                "sourceQuery",
                "connectorName",
                "parallelBranches",
                "choiceConditions",
                "repeatCount",
                "template",
                "description"
              ]
            }
          }
        }
      }
    }
  }
}
