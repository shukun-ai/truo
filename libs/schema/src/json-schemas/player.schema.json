{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PlayerSchema",
  "description": "Define the player contained Stores and UI Elements",
  "type": "object",
  "required": ["shares", "requests", "pages"],
  "additionalProperties": false,
  "properties": {
    "shares": {
      "title": "PlayerShares",
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "title": "PlayerShare",
          "type": "object",
          "properties": {
            "persist": {
              "const": ["localStorage", "sessionStorage"]
            }
          }
        }
      }
    },
    "requests": {
      "$ref": "player/requests.schema.json"
    },
    "pages": {
      "$ref": "player/pages.schema.json"
    }
  }
}
