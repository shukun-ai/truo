{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PlayerSchema",
  "description": "Define the player contained Stores and UI Elements",
  "type": "object",
  "required": ["title", "entry", "containers"],
  "additionalProperties": false,
  "properties": {
    "title": { "type": "string" },
    "entry": { "type": "string" },
    "containers": {
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "title": "PlayerContainer",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "repositories",
            "events",
            "widgets",
            "root",
            "tree"
          ],
          "properties": {
            "type": {
              "enum": ["page"]
            },
            "repositories": {
              "type": "object",
              "patternProperties": {
                "^(\\w)+$": {
                  "$ref": "player/repository.schema.json"
                }
              }
            },
            "events": {
              "type": "object",
              "patternProperties": {
                "^(\\w)+$": {
                  "$ref": "player/event.schema.json"
                }
              }
            },
            "widgets": {
              "type": "object",
              "patternProperties": {
                "^(\\w)+$": {
                  "$ref": "player/widget.schema.json"
                }
              }
            },
            "root": {
              "type": "array",
              "items": { "$ref": "#/definitions/PlayerTreeNode" }
            },
            "tree": {
              "type": "object",
              "patternProperties": {
                "^(\\w)+$": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/PlayerTreeNode" }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "PlayerTreeNode": {
      "title": "PlayerTreeNode",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "required": ["id"],
          "additionalProperties": false,
          "properties": {
            "id": { "type": "string" },
            "slot": { "type": "string" }
          }
        }
      ]
    }
  }
}
