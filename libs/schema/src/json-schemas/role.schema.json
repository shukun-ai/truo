{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "RoleSchema",
  "description": "Describe Role Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "label", "permissions"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "format": "apiName"
    },
    "label": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "isSystem": {
      "type": "boolean"
    },
    "permissions": {
      "type": "array",
      "items": {
        "title": "RolePermission",
        "type": "object",
        "additionalProperties": false,
        "required": ["resourceType", "resourceName", "action", "attributes"],
        "properties": {
          "resourceType": {
            "title": "RoleResourceType",
            "type": "string",
            "enum": [
              "public",
              "internal",
              "source",
              "view",
              "webhook",
              "developer",
              "tenant"
            ],
            "tsEnumNames": [
              "Public",
              "Internal",
              "Source",
              "View",
              "Webhook",
              "Developer",
              "Tenant"
            ]
          },
          "resourceName": {
            "type": "string"
          },
          "action": {
            "title": "RoleAction",
            "type": "string",
            "enum": [
              "read:any",
              "create:any",
              "update:any",
              "delete:any",
              "read:own",
              "update:own",
              "delete:own"
            ],
            "tsEnumNames": [
              "ReadAny",
              "CreateAny",
              "UpdateAny",
              "DeleteAny",
              "ReadOwn",
              "UpdateOwn",
              "DeleteOwn"
            ]
          },
          "attributes": {
            "type": "array",
            "items": {
              "title": "RoleAttribute",
              "type": "string"
            }
          }
        }
      }
    }
  }
}
