{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "PresenterEvent",
  "additionalProperties": false,
  "required": ["scope", "target", "action"],
  "properties": {
    "scope": {
      "enum": ["app", "container"]
    },
    "target": {
      "description": "Target for repository",
      "type": "string"
    },
    "action": {
      "description": "The action from repository",
      "type": "string"
    },
    "path": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "value": {
      "description": "convert the widget payload to repository input.",
      "type": "string"
    }
  }
}
