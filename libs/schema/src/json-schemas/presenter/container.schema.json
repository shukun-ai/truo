{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PresenterContainer",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "repositories", "widgets", "tree", "watches"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "type": {
      "enum": ["page"]
    },
    "repositories": {
      "type": "object",
      "title": "PresenterRepositories",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "repository.schema.json"
        }
      }
    },
    "widgets": {
      "type": "object",
      "title": "PresenterWidgets",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "widget.schema.json"
        }
      }
    },
    "tree": {
      "type": "object",
      "title": "PresenterTreeNodes",
      "patternProperties": {
        "^(.)+$": {
          "type": "array",
          "items": { "$ref": "#/definitions/PresenterTreeNode" }
        }
      }
    },
    "watches": {
      "type": "object",
      "title": "PresenterWatches",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "#/definitions/PresenterWatch"
        }
      }
    }
  },
  "definitions": {
    "PresenterTreeNode": {
      "title": "PresenterTreeNode",
      "type": "string"
    },
    "PresenterWatch": {
      "title": "PresenterWatch",
      "type": "object",
      "additionalProperties": false,
      "required": ["trigger", "events"],
      "properties": {
        "trigger": {
          "type": "object",
          "properties": {
            "stateChanged": {
              "type": "array",
              "items": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "containerMounted": {
              "type": "boolean"
            },
            "interval": {
              "type": "number",
              "description": "The unit of interval is milliseconds."
            }
          }
        },
        "events": {
          "type": "array",
          "items": {
            "$ref": "event.schema.json"
          }
        }
      }
    }
  }
}
