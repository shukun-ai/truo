{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PresenterContainer",
  "type": "object",
  "additionalProperties": false,
  "required": ["label", "type", "repositories", "widgets", "root", "tree"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "label": {
      "type": "string"
    },
    "type": {
      "enum": ["page"]
    },
    "repositories": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "repository.schema.json"
        }
      }
    },
    "widgets": {
      "type": "object",
      "title": "PresenterWidgets",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "widget.schema.json"
        }
      }
    },
    "tree": {
      "type": "object",
      "title": "PresenterTreeNodes",
      "patternProperties": {
        "^(.)+$": {
          "type": "array",
          "items": { "$ref": "#/definitions/PresenterTreeNode" }
        }
      }
    }
  },
  "definitions": {
    "PresenterTreeNode": {
      "title": "PresenterTreeNode",
      "type": "string"
    }
  }
}
