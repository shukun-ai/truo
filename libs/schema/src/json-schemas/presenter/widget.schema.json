{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PresenterWidget",
  "type": "object",
  "required": ["tag", "properties", "events"],
  "additionalProperties": false,
  "properties": {
    "tag": { "type": "string" },
    "label": { "type": "string" },
    "parentSlot": { "type": "string" },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "type": ["string", "array", "object", "number", "boolean"]
        }
      }
    },
    "events": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "PresenterEvent",
            "additionalProperties": false,
            "required": ["scope", "target", "action", "convertor"],
            "properties": {
              "scope": {
                "enum": ["app", "container"]
              },
              "target": {
                "description": "Target for repository",
                "type": "string"
              },
              "action": {
                "description": "The action from repository",
                "type": "string"
              },
              "convertor": {
                "description": "convert the widget payload to repository input.",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "default": {
    "tag": "",
    "properties": {},
    "events": {}
  }
}
