{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PresenterScreen",
  "type": "object",
  "required": ["layout"],
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/PresenterScreenDashboard"
    },
    {
      "$ref": "#/definitions/PresenterScreenWorkshop"
    }
  ],
  "definitions": {
    "PresenterScreenDashboard": {
      "title": "PresenterScreenDashboard",
      "type": "object",
      "required": ["layout", "title", "slots"],
      "additionalProperties": false,
      "properties": {
        "layout": { "const": "Dashboard" },
        "title": { "type": "string" },
        "slots": {
          "type": "object",
          "required": ["main"],
          "additionalProperties": false,
          "properties": {
            "main": { "type": "string" },
            "menu": { "type": "string" }
          }
        }
      }
    },
    "PresenterScreenWorkshop": {
      "title": "PresenterScreenWorkshop",
      "type": "object",
      "required": ["layout", "title", "slots"],
      "additionalProperties": false,
      "properties": {
        "layout": { "const": "Workshop" },
        "title": { "type": "string" },
        "slots": {
          "type": "object",
          "required": ["main"],
          "additionalProperties": false,
          "properties": {
            "main": { "type": "string" },
            "menu": { "type": "string" }
          }
        }
      }
    }
  }
}
