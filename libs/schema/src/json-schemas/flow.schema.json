{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "FlowSchema",
  "description": "Describe Flow Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["name"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "format": "apiName"
    },
    "description": {
      "type": "string"
    },
    "parameters": {},
    "startEventName": {
      "type": "string"
    },
    "events": {
      "$ref": "flow/events.schema.json"
    }
  }
}
