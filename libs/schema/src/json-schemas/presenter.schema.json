{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PresenterSchema",
  "description": "Define the presenter contained Stores and UI Elements",
  "type": "object",
  "required": ["title", "entry", "containers"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "title": { "type": "string" },
    "entry": { "type": "string" },
    "containers": {
      "type": "object",
      "patternProperties": {
        "^(\\w)+$": {
          "title": "PresenterContainer",
          "type": "object",
          "additionalProperties": false,
          "required": [
            "type",
            "repositories",
            "events",
            "widgets",
            "root",
            "tree"
          ],
          "properties": {
            "type": {
              "enum": ["page"]
            },
            "repositories": {
              "type": "object",
              "patternProperties": {
                "^(\\w)+$": {
                  "$ref": "presenter/repository.schema.json"
                }
              }
            },
            "events": {
              "type": "object",
              "patternProperties": {
                "^(\\w)+$": {
                  "$ref": "presenter/event.schema.json"
                }
              }
            },
            "widgets": {
              "type": "object",
              "patternProperties": {
                "^(\\w)+$": {
                  "$ref": "presenter/widget.schema.json"
                }
              }
            },
            "root": {
              "type": "array",
              "items": { "$ref": "#/definitions/PresenterTreeNode" }
            },
            "tree": {
              "type": "object",
              "patternProperties": {
                "^(\\w)+$": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/PresenterTreeNode" }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "PresenterTreeNode": {
      "title": "PresenterTreeNode",
      "type": "string"
    }
  }
}
