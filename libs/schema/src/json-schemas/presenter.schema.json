{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PresenterSchema",
  "description": "Define the presenter contained Stores and UI Elements",
  "type": "object",
  "required": ["label", "widgets", "nodes", "repositories"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "label": { "type": "string" },
    "widgets": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "#/definitions/PresenterWidget"
        }
      }
    },
    "nodes": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "#/definitions/PresenterNode"
        }
      }
    },
    "variables": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "#/definitions/PresenterVariable"
        }
      }
    },
    "processes": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "#/definitions/PresenterProcess"
        }
      }
    },
    "repositories": {
      "type": "object",
      "patternProperties": {
        "^(.)+$": {
          "$ref": "#/definitions/PresenterRepository"
        }
      }
    }
  },
  "definitions": {
    "PresenterParameter": {
      "title": "PresenterParameter",
      "type": ["string", "array", "object", "number", "boolean"]
    },
    "PresenterWidget": {
      "title": "PresenterWidget",
      "type": "object",
      "required": ["tag", "label", "properties", "events"],
      "additionalProperties": false,
      "properties": {
        "tag": { "type": "string" },
        "label": { "type": "string" },
        "parentSlot": { "type": "string" },
        "properties": {
          "type": "object",
          "patternProperties": {
            "^(.)+$": {
              "$ref": "#/definitions/PresenterParameter"
            }
          }
        },
        "events": {
          "type": "object",
          "patternProperties": {
            "^(.)+$": {
              "$ref": "#/definitions/PresenterEvent"
            }
          }
        }
      }
    },
    "PresenterNode": {
      "title": "PresenterNode",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "PresenterVariable": {
      "title": "PresenterVariable",
      "type": "object",
      "required": [],
      "additionalProperties": false,
      "properties": {
        "schema": {
          "type": "object",
          "$comment": "JSON Schema"
        },
        "defaultValue": {
          "type": "string"
        }
      }
    },
    "PresenterRepository": {
      "title": "PresenterRepository",
      "type": "object",
      "required": ["type", "parameters"],
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "parameters": {
          "type": "object",
          "patternProperties": {
            "^(.)+$": {
              "$ref": "#/definitions/PresenterParameter"
            }
          }
        }
      }
    },
    "PresenterEvent": {
      "type": "object",
      "title": "PresenterEvent",
      "additionalProperties": false,
      "required": ["process", "value"],
      "properties": {
        "process": {
          "description": "Process Id",
          "type": "string"
        },
        "value": {
          "description": "convert the widget payload to process input.",
          "type": "string"
        }
      }
    },
    "PresenterProcess": {
      "title": "PresenterProcess",
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "start", "tasks"],
      "properties": {
        "label": { "type": "string" },
        "inputSchema": {
          "type": "object",
          "$comment": "The input JSON Schema Rule"
        },
        "outputSchema": {
          "type": "object",
          "$comment": "The output JSON Schema Rule"
        },
        "start": {
          "type": "string",
          "$comment": "Start task name"
        },
        "tasks": {
          "type": "object",
          "patternProperties": {
            "^(.)+$": {
              "type": "object",
              "title": "PresenterTask",
              "required": ["type", "parameters"],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "type": "string",
                  "$comment": "task name from task list defined by TaskSchema."
                },
                "parameters": {
                  "type": "object",
                  "patternProperties": {
                    "^(.)+$": {
                      "tsType": "unknown",
                      "$comment": "The value and structure is defined by task list by TaskSchema."
                    }
                  }
                },
                "next": {
                  "type": "string",
                  "$comment": "Next task name."
                }
              }
            }
          }
        }
      }
    }
  }
}
