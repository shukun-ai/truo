{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "ApplicationSchema",
  "description": "Describe a Shukun Application",
  "type": "object",
  "additionalProperties": false,
  "required": ["title"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "metadata": {
      "type": "array",
      "items": {
        "$ref": "application/metadata.schema.json"
      }
    },
    "views": {
      "type": "array",
      "items": {
        "$ref": "application/view.schema.json"
      }
    },
    "workflows": {
      "type": "array",
      "items": {
        "$ref": "application/workflow.schema.json"
      }
    },
    "flows": {
      "type": "array",
      "items": {
        "$ref": "application/flow.schema.json"
      }
    },
    "roles": {
      "type": "array",
      "items": {
        "$ref": "application/role.schema.json"
      }
    },
    "schedules": {
      "type": "array",
      "items": {
        "$ref": "application/schedule.schema.json"
      }
    },
    "environments": {
      "type": "array",
      "items": {
        "$ref": "application/environment.schema.json"
      }
    }
  }
}
