{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "input",
  "properties": {
    "type": {
      "label": "类型",
      "schema": {
        "enum": [
          "color",
          "date",
          "datetime-local",
          "email",
          "month",
          "number",
          "password",
          "tel",
          "text",
          "time",
          "url",
          "week"
        ]
      },
      "defaultValue": "text"
    },
    "name": {
      "label": "表单绑定名称",
      "schema": {
        "type": "string"
      }
    },
    "placeholder": {
      "label": "占位提示",
      "schema": {
        "type": "string"
      }
    },
    "disabled": {
      "label": "禁用",
      "schema": {
        "type": "boolean"
      }
    },
    "required": {
      "label": "必填",
      "schema": {
        "type": "boolean"
      }
    },
    "hidden": {
      "label": "隐藏",
      "schema": {
        "type": "boolean"
      }
    },
    "label": {
      "label": "标签",
      "schema": {
        "type": "string"
      }
    },
    "helper": {
      "label": "帮助信息",
      "schema": {
        "type": "string"
      }
    }
  }
}
