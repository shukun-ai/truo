{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "input",
  "properties": {
    "type": {
      "type": "enum",
      "label": "类型",
      "defaultValue": "text",
      "enumOptions": [
        { "label": "颜色", "value": "color" },
        { "label": "日期", "value": "date" },
        { "label": "日期时间", "value": "datetime-local" },
        { "label": "邮箱地址", "value": "email" },
        { "label": "月份", "value": "month" },
        { "label": "数字", "value": "number" },
        { "label": "密码", "value": "password" },
        { "label": "电话号码", "value": "tel" },
        { "label": "文本", "value": "text" },
        { "label": "时间", "value": "time" },
        { "label": "网址", "value": "url" },
        { "label": "周", "value": "week" }
      ]
    },
    "value": {
      "type": "string",
      "label": "值"
    },
    "placeholder": {
      "type": "string",
      "label": "占位提示"
    },
    "disabled": {
      "type": "boolean",
      "label": "禁用"
    },
    "hidden": {
      "type": "boolean",
      "label": "隐藏"
    },
    "label": {
      "type": "string",
      "label": "标签"
    },
    "labelHidden": {
      "type": "boolean",
      "label": "标签隐藏"
    },
    "labelPosition": {
      "type": "enum",
      "label": "标签位置",
      "enumOptions": [
        { "label": "靠左", "value": "left" },
        { "label": "靠上", "value": "top" }
      ]
    },
    "labelWidth": {
      "type": "string",
      "label": "标签宽度"
    },
    "helper": {
      "type": "string",
      "label": "帮助信息"
    },
    "change": {
      "type": "callback",
      "label": "值改变事件"
    },
    "enter": {
      "type": "callback",
      "label": "回车事件"
    }
  }
}
