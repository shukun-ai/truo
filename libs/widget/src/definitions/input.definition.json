{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "input",
  "properties": {
    "type": {
      "label": "类型",
      "schema": {
        "enum": [
          "color",
          "date",
          "datetime-local",
          "email",
          "month",
          "number",
          "password",
          "tel",
          "text",
          "time",
          "url",
          "week"
        ]
      },
      "defaultValue": "text"
    },
    "value": {
      "label": "值",
      "schema": {
        "type": "string"
      }
    },
    "placeholder": {
      "label": "占位提示",
      "schema": {
        "type": "string"
      }
    },
    "disabled": {
      "label": "禁用",
      "schema": {
        "type": "boolean"
      }
    },
    "hidden": {
      "label": "隐藏",
      "schema": {
        "type": "boolean"
      }
    },
    "label": {
      "label": "标签",
      "schema": {
        "type": "string"
      }
    },
    "labelHidden": {
      "label": "标签隐藏",
      "schema": {
        "type": "boolean"
      }
    },
    "labelPosition": {
      "label": "标签位置",
      "schema": {
        "enum": ["left", "top"]
      },
      "defaultValue": "left"
    },
    "labelWidth": {
      "label": "标签宽度",
      "schema": {
        "type": "string"
      }
    },
    "helper": {
      "label": "帮助信息",
      "schema": {
        "type": "string"
      }
    },
    "change": {
      "label": "值改变事件",
      "isEvent": true,
      "schema": {
        "type": "string"
      }
    },
    "enter": {
      "label": "回车事件",
      "isEvent": true,
      "schema": {
        "type": "null"
      }
    }
  }
}
