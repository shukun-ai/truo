{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "input",
  "properties": {
    "type": {
      "type": "enum",
      "label": "类型",
      "defaultValue": "text",
      "enumOptions": [
        { "label": "颜色", "value": "color" },
        { "label": "日期", "value": "date" },
        { "label": "日期时间", "value": "datetime-local" },
        { "label": "邮箱地址", "value": "email" },
        { "label": "月份", "value": "month" },
        { "label": "数字", "value": "number" },
        { "label": "密码", "value": "password" },
        { "label": "电话号码", "value": "tel" },
        { "label": "文本", "value": "text" },
        { "label": "时间", "value": "time" },
        { "label": "网址", "value": "url" },
        { "label": "周", "value": "week" }
      ]
    },
    "value": {
      "type": "string",
      "label": "Value Binding"
    },
    "multiline": {
      "type": "boolean",
      "label": "多行文本"
    },
    "placeholder": {
      "type": "string",
      "label": "Placeholder"
    },
    "disabled": {
      "type": "boolean",
      "label": "disabled"
    },
    "readOnly": {
      "type": "boolean",
      "label": "readonly"
    },
    "hidden": {
      "type": "boolean",
      "label": "hidden:"
    },
    "label": {
      "type": "string",
      "label": "Label"
    },
    "labelCaption": {
      "type": "string",
      "label": "Caption"
    },
    "labelHidden": {
      "type": "boolean",
      "label": "Hide Label"
    },
    "labelPosition": {
      "type": "enum",
      "label": "Position",
      "enumOptions": [
        { "label": "Left", "value": "left" },
        { "label": "Top", "value": "top" }
      ]
    },
    "labelAlignment": {
      "type": "enum",
      "label": "Alignment",
      "enumOptions": [
        { "label": "Left", "value": "left" },
        { "label": "Right", "value": "right" }
      ]
    },
    "labelWidth": {
      "type": "string",
      "label": "Width"
    },
    "tooltip": {
      "type": "string",
      "label": "Tooltip"
    },
    "helper": {
      "type": "string",
      "label": "Helper Text"
    },
    "spellCheck": {
      "type": "boolean",
      "label": "Enable Spell Check"
    },
    "autofill": {
      "type": "boolean",
      "label": "Enable Browser Autofill"
    },
    "change": {
      "type": "callback",
      "label": "Change Event Binding"
    },
    "enter": {
      "type": "callback",
      "label": "Enter Event Binding"
    }
  }
}
