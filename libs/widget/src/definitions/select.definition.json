{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "select",
  "properties": {
    "value": {
      "type": "string",
      "label": "值"
    },
    "values": {
      "type": "array",
      "label": "可选值",
      "placeholder": "[1, 2, 3]",
      "schema": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "labels": {
      "type": "array",
      "label": "标签值",
      "placeholder": "['甲', '乙', '丙']",
      "schema": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "placeholder": {
      "type": "string",
      "label": "占位提示"
    },
    "disabled": {
      "type": "boolean",
      "label": "禁用"
    },
    "hidden": {
      "type": "boolean",
      "label": "隐藏"
    },
    "label": {
      "type": "string",
      "label": "标签"
    },
    "labelHidden": {
      "type": "boolean",
      "label": "标签隐藏"
    },
    "labelPosition": {
      "type": "enum",
      "label": "标签位置",
      "enumOptions": [
        { "label": "靠左", "value": "left" },
        { "label": "靠上", "value": "top" }
      ]
    },
    "labelWidth": {
      "type": "string",
      "label": "标签宽度"
    },
    "helper": {
      "type": "string",
      "label": "帮助信息"
    },
    "change": {
      "type": "callback",
      "label": "值改变事件"
    }
  }
}
