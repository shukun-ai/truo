{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "select",
  "properties": {
    "value": {
      "label": "值",
      "schema": {
        "type": "string"
      }
    },
    "values": {
      "label": "可选值",
      "schema": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "placeholder": "[1, 2, 3]"
    },
    "labels": {
      "label": "标签值",
      "schema": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "placeholder": "['甲', '乙', '丙']"
    },
    "placeholder": {
      "label": "占位提示",
      "schema": {
        "type": "string"
      }
    },
    "disabled": {
      "label": "禁用",
      "schema": {
        "type": "boolean"
      }
    },
    "hidden": {
      "label": "隐藏",
      "schema": {
        "type": "boolean"
      }
    },
    "label": {
      "label": "标签",
      "schema": {
        "type": "string"
      }
    },
    "labelHidden": {
      "label": "标签隐藏",
      "schema": {
        "type": "boolean"
      }
    },
    "labelPosition": {
      "label": "标签位置",
      "schema": {
        "enum": ["left", "top"]
      }
    },
    "labelWidth": {
      "label": "标签宽度",
      "schema": {
        "type": "string"
      }
    },
    "helper": {
      "label": "帮助信息",
      "schema": {
        "type": "string"
      }
    },
    "change": {
      "label": "值改变事件",
      "isEvent": true,
      "schema": {
        "type": ["string", "null"]
      }
    }
  }
}
