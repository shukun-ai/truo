{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "checkbox-select",
  "properties": {
    "value": {
      "label": "值",
      "schema": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "options": {
      "label": "可选值",
      "schema": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["key", "label"],
          "additionalProperties": false,
          "properties": {
            "key": { "type": "string" },
            "label": { "type": "string" }
          }
        }
      },
      "defaultValue": []
    },
    "disabled": {
      "label": "禁用",
      "schema": {
        "type": "boolean"
      }
    },
    "required": {
      "label": "必填",
      "schema": {
        "type": "boolean"
      }
    },
    "hidden": {
      "label": "隐藏",
      "schema": {
        "type": "boolean"
      }
    },
    "label": {
      "label": "标签",
      "schema": {
        "type": "string"
      }
    },
    "helper": {
      "label": "帮助信息",
      "schema": {
        "type": "string"
      }
    },
    "change": {
      "label": "值改变事件",
      "isEvent": true,
      "schema": {
        "type": "array",
        "items": { "type": "string" }
      }
    }
  }
}
