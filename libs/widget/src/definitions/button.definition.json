{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "button",
  "properties": {
    "text": {
      "label": "文本",
      "schema": {
        "type": "string"
      }
    },
    "variant": {
      "label": "按钮样式",
      "schema": {
        "enum": ["solid", "outlined", "plain", "soft"]
      },
      "defaultValue": "solid"
    },
    "color": {
      "label": "颜色",
      "schema": {
        "enum": ["primary", "neutral", "success", "danger", "info", "warning"]
      },
      "defaultValue": "primary"
    },
    "size": {
      "label": "尺寸",
      "schema": {
        "enum": ["sm", "md", "lg"]
      },
      "defaultValue": "md"
    },
    "disabled": {
      "label": "是否禁用",
      "schema": {
        "type": "boolean"
      },
      "defaultValue": false
    },
    "loading": {
      "label": "是否加载中",
      "schema": {
        "type": "boolean"
      },
      "defaultValue": false
    },
    "fullWidth": {
      "label": "是否撑满",
      "schema": {
        "type": "boolean"
      },
      "defaultValue": false
    },
    "click": {
      "label": "点击事件",
      "isEvent": true,
      "schema": {}
    }
  }
}
