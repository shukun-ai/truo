{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "button",
  "properties": {
    "text": {
      "type": "string",
      "label": "文本"
    },
    "variant": {
      "type": "enum",
      "label": "按钮样式",
      "defaultValue": "solid",
      "enumOptions": [
        { "label": "实体", "value": "solid" },
        { "label": "轮廓", "value": "outlined" },
        { "label": "扁平", "value": "plain" },
        { "label": "软化", "value": "soft" }
      ]
    },
    "color": {
      "type": "enum",
      "label": "颜色",
      "defaultValue": "primary",
      "enumOptions": [
        { "label": "主按钮", "value": "primary" },
        { "label": "次按钮", "value": "neutral" },
        { "label": "成功", "value": "success" },
        { "label": "危险", "value": "danger" },
        { "label": "提示", "value": "info" },
        { "label": "警告", "value": "warning" }
      ]
    },
    "size": {
      "type": "enum",
      "label": "尺寸",
      "defaultValue": "md",
      "enumOptions": [
        { "label": "偏小", "value": "sm" },
        { "label": "正常", "value": "md" },
        { "label": "偏大", "value": "lg" }
      ]
    },
    "disabled": {
      "type": "boolean",
      "label": "是否禁用"
    },
    "loading": {
      "type": "boolean",
      "label": "是否加载中"
    },
    "fullWidth": {
      "type": "boolean",
      "label": "是否撑满"
    },
    "click": {
      "type": "callback",
      "label": "When the button clicked"
    }
  }
}
