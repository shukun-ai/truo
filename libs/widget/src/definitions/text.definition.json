{
  "$schema": "../../../schema/src/json-schemas/widget.schema.json",
  "tag": "text",
  "properties": {
    "value": {
      "type": "string",
      "label": "显示文字"
    },
    "textColor": {
      "type": "string",
      "label": "自定义颜色"
    },
    "textAlign": {
      "type": "enum",
      "label": "对齐方式",
      "defaultValue": "left",
      "enumOptions": [
        { "label": "居中对齐", "value": "center" },
        { "label": "两端对齐", "value": "justify" },
        { "label": "左对齐", "value": "left" },
        { "label": "右对齐", "value": "right" }
      ]
    },
    "noWrap": {
      "type": "boolean",
      "label": "自动换行"
    },
    "level": {
      "type": "enum",
      "label": "样式",
      "defaultValue": "body1",
      "enumOptions": [
        { "label": "body1", "value": "body1" },
        { "label": "body2", "value": "body2" },
        { "label": "body3", "value": "body3" },
        { "label": "h1", "value": "h1" },
        { "label": "h2", "value": "h2" },
        { "label": "h3", "value": "h3" },
        { "label": "h4", "value": "h4" },
        { "label": "h5", "value": "h5" },
        { "label": "h6", "value": "h6" }
      ]
    }
  }
}
