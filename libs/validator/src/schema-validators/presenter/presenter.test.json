{
  "$schema": "../../../../schema/src/json-schemas/presenter.schema.json",
  "label": "PDA",
  "screens": {
    "home": {
      "layout": "Dashboard",
      "slots": {
        "main": "home"
      }
    },
    "about": {
      "layout": "Dashboard",
      "slots": {
        "main": "about"
      }
    }
  },
  "containers": {
    "home": {
      "type": "page",
      "repositories": {
        "form1": {
          "type": "Simple",
          "parameters": {}
        }
      },
      "widgets": {
        "w1": {
          "tag": "sk-text",
          "properties": {
            "value": "{{$.form1.deviceNumber}}"
          },
          "events": {}
        },
        "w2": {
          "tag": "sk-input",
          "properties": {
            "value": "{{$.form1.deviceNumber}}"
          },
          "events": {
            "value-changed": [
              {
                "scope": "container",
                "target": "form1",
                "action": "setValue",
                "path": ["deviceNumber"]
              }
            ]
          }
        },
        "w3": {
          "tag": "sk-code",
          "properties": {
            "value": "{{$.form1}}"
          },
          "events": {}
        }
      },
      "watches": {},
      "tree": {
        "root": ["w1", "w2", "w3"]
      }
    },
    "about": {
      "type": "page",
      "repositories": {
        "form2": {
          "type": "Simple",
          "parameters": {}
        }
      },
      "widgets": {
        "w1": {
          "tag": "sk-text",
          "properties": {
            "value": "It is about page {{$.form2.value}}."
          },
          "events": {}
        }
      },
      "watches": {},
      "tree": {
        "root": ["w1"]
      }
    }
  }
}
