{
  "$schema": "../../../../schema/src/json-schemas/widget.schema.json",
  "tag": "select",
  "properties": {
    "name": {
      "label": "表单绑定名称",
      "schema": {
        "type": "string"
      }
    },
    "options": {
      "label": "可选值",
      "schema": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["key", "label"],
          "additionalProperties": false,
          "properties": {
            "key": { "type": "string" },
            "label": { "type": "string" }
          }
        }
      },
      "defaultValue": []
    },
    "placeholder": {
      "label": "占位提示",
      "schema": {
        "type": "string"
      }
    },
    "disabled": {
      "label": "禁用",
      "schema": {
        "type": "boolean"
      }
    },
    "required": {
      "label": "必填",
      "schema": {
        "type": "boolean"
      }
    },
    "hidden": {
      "label": "隐藏",
      "schema": {
        "type": "boolean"
      }
    },
    "label": {
      "label": "标签",
      "schema": {
        "type": "string"
      }
    },
    "helper": {
      "label": "帮助信息",
      "schema": {
        "type": "string"
      }
    }
  }
}
