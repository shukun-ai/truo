{
  "$schema": "../../../../schema/src/json-schemas/widget.schema.json",
  "tag": "grid",
  "properties": {
    "columns": {
      "label": "列数",
      "schema": {
        "type": "number"
      },
      "defaultValue": 2
    },
    "breakpoints": {
      "label": "响应式列数",
      "schema": {
        "type": "array",
        "items": {
          "required": ["breakpoint", "columns"],
          "additionalProperties": false,
          "properties": {
            "breakpoint": {
              "enum": ["xs", "sm", "md", "lg", "xl"],
              "description": "36em, 48em, 62em, 75em, 88em"
            },
            "columns": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
