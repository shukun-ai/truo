{
  "$schema": "../../../../schema/src/json-schemas/widget.schema.json",
  "tag": "table",
  "properties": {
    "columns": {
      "label": "列定义",
      "schema": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["label", "type", "field"],
          "properties": {
            "label": { "type": "string" },
            "type": { "enum": ["text", "link"] },
            "field": { "type": "string" },
            "convertor": { "type": "string" },
            "link": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "screen": { "type": "string" },
                "search": { "type": "string" }
              }
            },
            "disabledSorting": { "type": "boolean" },
            "hiddenColumn": { "type": "string", "description": "template" },
            "backgroundColor": { "type": "string", "description": "template" }
          }
        }
      },
      "defaultValue": []
    },
    "value": {
      "label": "值",
      "schema": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "defaultValue": []
    },
    "totalCounts": {
      "label": "总条数",
      "schema": {
        "type": "number"
      }
    },
    "changePage": {
      "label": "触发修改分页的事件",
      "isEvent": true,
      "schema": {
        "type": "number"
      }
    }
  }
}
