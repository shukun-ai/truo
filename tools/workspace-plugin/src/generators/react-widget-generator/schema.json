{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "react-widget-generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "description": "Library path",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "presenterFile": {
      "type": "string"
    },
    "editorFile": {
      "type": "string"
    }
  },
  "required": ["name", "path", "presenterFile", "editorFile"]
}
