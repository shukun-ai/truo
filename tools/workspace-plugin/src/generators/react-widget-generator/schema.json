{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "widget-generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "description": "Library path",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    }
  },
  "required": ["name", "path"]
}
